# ExperimentalPlatform
[Unit]
Description=Update trigger for Experimental Platform
ConditionFileNotEmpty=/etc/protonet/system/channel

[Service]
ExecStart=/usr/bin/env bash -c 'OLDSCRIPT=$(</etc/systemd/system/scripts/platform-configure.sh); bash -c "$OLDSCRIPT" -s "--reboot"'
KillMode=none
Type=oneshot
